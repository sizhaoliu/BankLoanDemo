package org.talend.bank;

import org.talend.bank.LoanCalculator;
import org.talend.bank.LoanSimulator;

rule "CheckYoungAge"
	no-loop true
	ruleflow-group "AgeValidation"
	dialect "mvel"
	when
		myLoan : LoanSimulator( age < ( 16 ) )
	then
		modify( myLoan ) {
				setRejected( true ), 
				setReason( "AGE" )
		}
		System.out.println("Rejected for invalid age.");
end
